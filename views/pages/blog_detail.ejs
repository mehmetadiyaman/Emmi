<% const { _id:currentBlogId, banner:{ url:bannerURL }, title, content, owner:{
name:authorName, profilePhoto:{ url:profilePhotoURL }={},
username:authorUsername }, reaction, readingTime, totalBookmark, createdAt
}=locals.blog; const compressedBannerURL=bannerURL?.replace("upload/",
"upload/w_960,h_420,c_auto/q_auto/f_auto/"); %>

<!DOCTYPE html>
<html lang="tr">
  <head>
    <%- include('../layouts/head', { title: `${title} | Emmi` }) %>
    <script src="/js/script.js" defer></script>
  </head>
  <body>
    <!--
    # Üst uygulama çubuğu
    -->
    <%- include("../partials/top_app_bar") %>
    <main class="main">
      <!--blog detayları -->
      <div class="page blog-detail-page">
        <div class="container">
          <article class="blog-detail">
            <figure class="blog-banner img-holder">
              <img
                src="<%=compressedBannerURL%>"
                width="960"
                height="420"
                alt="<%=title%>"
                class="img cover"
              />
            </figure>
            <div class="blog-author">
              <p class="avatar title-medium"><%=authorName.at()%></p>
              <div class="leading-text">
                <a
                  href="/profile/<%= authorUsername %>"
                  class="title-medium text-on-surface text-link"
                  ><%= authorName %></a
                >
                <p class="body-small text-on-surface-variant">
                  Yayınlandı <%=new
                  Date(createdAt).toLocaleDateString('en-US',{month:'long',day:'numeric',year:'numeric'})%>
                </p>
              </div>
            </div>
          </article>
        </div>
      </div>
    </main>
    <!--
    # Footer
    -->
    <%- include("../layouts/footer") %>
  </body>
</html>
