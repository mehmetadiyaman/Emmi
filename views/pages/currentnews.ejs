<!DOCTYPE html>
<html lang="tr">
  <head>
    <%- include('../layouts/head', { title: 'Ana Sayfa | Emmi' }) %>
    <script src="/js/script.js" defer></script>
  </head>
  <body>
    <!-- #Üst uygulama çubuğu -->
    <%- include("../partials/top_app_bar") %>

    <main class="main">
      <!-- #Home -->
      <article class="page home-page">
        <div class="container">
          <h2 class="headline-small page-title text-on-surface">
            Güncel blog paylaşımları
          </h2>
          <div class="blog-list">
            <% if (locals.articles && locals.articles.length > 0) { %> <%
            locals.articles.forEach(article => { %>
            <!-- Include the card partial for each article -->
            <%- include('../partials/vericard', { article }) %> <% }) %> <% }
            else { %>
            <p>Henüz hiçbir haber bulunmamaktadır.</p>
            <% } %>
          </div>

          <% if (locals.pagination.next || locals.pagination.prev) { %> <%-
          include('../partials/pagination') %> <% } %>
        </div>
      </article>
    </main>

    <!-- #Footer -->
    <%- include("../layouts/footer") %>
  </body>
</html>
